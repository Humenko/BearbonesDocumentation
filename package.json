{
  "name": "bearbones-documentation",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bearbon.es",
  "scripts": {
    "build-css": "node-sass-chokidar src/styles/sass -o src/styles/css",
    "watch-css":
      "npm run build-css && node-sass-chokidar src/styles/sass -o src/styles/css --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test --env=jsdom"
  },
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "bearbones": "0.27.0",
    "eslint": "^4.18.0",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-watch": "^3.1.3",
    "gh-pages": "^1.1.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "4.1.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-highlight": "briancappello/react-highlight#react-v16-compiled",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.1"
  }
}
